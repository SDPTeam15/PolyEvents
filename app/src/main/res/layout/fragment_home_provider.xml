<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/id_fragment_home_provider"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragments.home.ProviderHomeFragment">

    <Spinner
        android:id="@+id/spinner_provider"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:entries="@array/Ranks" />

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:alignmentMode="alignMargins"
        app:columnCount="1"
        app:columnOrderPreserved="false"
        app:rowCount="4"
        app:rowOrderPreserved="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="10dp"
            android:gravity="center|fill_vertical"
            android:orientation="horizontal"
            app:layout_column="0"
            app:layout_columnSpan="1"
            app:layout_row="0">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/provider_hub_title"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|fill_vertical"
            android:orientation="horizontal"
            app:layout_column="0"
            app:layout_columnSpan="1"
            app:layout_row="1">

            <Button
                android:id="@+id/id_request_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:backgroundTint="#FFFFFF"
                android:drawableTop="@drawable/ic_requests"
                android:drawableTint="@color/purple_500"
                android:text="@string/items_requests_button_text"
                android:textColor="@color/purple_500"
                app:layout_gravity="center|center_horizontal"
                app:strokeColor="@color/purple_500"
                app:strokeWidth="2dp"
                tools:ignore="ButtonStyle" />
        </LinearLayout>

    </androidx.gridlayout.widget.GridLayout>

</FrameLayout>