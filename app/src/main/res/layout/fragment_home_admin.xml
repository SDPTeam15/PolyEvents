<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/id_fragment_home_admin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragments.home.AdminHomeFragment">

    <Spinner
        android:id="@+id/spinner_admin"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:entries="@array/Ranks" />

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:alignmentMode="alignMargins"
        app:columnCount="1"
        app:columnOrderPreserved="false"
        app:rowCount="4"
        app:rowOrderPreserved="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="10dp"
            android:gravity="center|fill_vertical"
            android:orientation="horizontal"
            app:layout_column="0"
            app:layout_columnSpan="1"
            app:layout_row="0">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/admin_hub_title"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|fill_vertical"
            android:orientation="horizontal"
            app:layout_column="0"
            app:layout_columnSpan="1"
            app:layout_row="1">

            <Button
                android:id="@+id/btnRedirectZoneManagement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:backgroundTint="#FFFFFF"
                android:drawableTop="@drawable/ic_place"
                android:drawableTint="@color/purple_500"
                android:text="@string/admin_hub_btn_zone_text"
                android:textColor="@color/purple_500"
                app:layout_gravity="center|center_horizontal"
                app:strokeColor="@color/purple_500"
                app:strokeWidth="2dp"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/btnRedirectUserManagement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:backgroundTint="@color/white"
                android:drawableTop="@drawable/ic_account_circle"
                android:drawableTint="@color/purple_500"
                android:text="@string/admin_hub_btn_user_text"
                android:textColor="@color/purple_500"
                app:layout_gravity="center|center_horizontal"
                app:strokeColor="@color/purple_500"
                app:strokeWidth="2dp"
                tools:ignore="ButtonStyle" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_column="0"
            app:layout_columnSpan="1"
            app:layout_row="2">

            <Button
                android:id="@+id/btnRedirectItemsListManagement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:backgroundTint="#FFFFFF"
                android:drawableTop="@drawable/ic_pencil"
                android:drawableTint="@color/purple_500"
                android:text="@string/admin_hub_btn_item_list_text"
                android:textColor="@color/purple_500"
                app:layout_gravity="center|center_horizontal"
                app:strokeColor="@color/purple_500"
                app:strokeWidth="2dp"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/btnRedirectEventManager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:backgroundTint="#FFFFFF"
                android:drawableTop="@drawable/ic_event"
                android:drawableTint="@color/purple_500"
                android:text="@string/admin_hub_btn_event_text"
                android:textColor="@color/purple_500"
                app:layout_gravity="center|center_horizontal"
                app:strokeColor="@color/purple_500"
                app:strokeWidth="2dp"
                tools:ignore="ButtonStyle" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_column="0"
            app:layout_columnSpan="1"
            app:layout_row="3">

            <Button
                android:id="@+id/btnRedirectItemReqManagement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:backgroundTint="#FFFFFF"
                android:drawableTop="@drawable/ic_edit"
                android:drawableTint="@color/purple_500"
                android:text="@string/admin_hub_btn_item_request_text"
                android:textColor="@color/purple_500"
                app:layout_gravity="center|center_horizontal"
                app:strokeColor="@color/purple_500"
                app:strokeWidth="2dp"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/btnRedirectRouteManager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:backgroundTint="#FFFFFF"
                android:drawableTop="@drawable/ic_route"
                android:drawableTint="@color/purple_500"
                android:text="@string/admin_hub_btn_route_text"
                android:textColor="@color/purple_500"
                app:layout_gravity="center|center_horizontal"
                app:strokeColor="@color/purple_500"
                app:strokeWidth="2dp"
                tools:ignore="ButtonStyle" />
        </LinearLayout>

    </androidx.gridlayout.widget.GridLayout>

</FrameLayout>